<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wanmac.todo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text01"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <EditText
        android:id="@+id/title01"
        android:layout_below="@id/text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="27sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/detail01"
        android:layout_width="wrap_content"
        android:layout_below="@id/title01"
        android:layout_height="wrap_content"
        android:hint="To do Detail"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/inPutButton01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail01"
        android:text="Click to input"
        android:layout_margin="6dp"
        android:alpha="0.5"/>

    <Button
        android:id="@+id/toDetaiButton01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inPutButton01"
        android:text="Click to Detail"
        android:layout_margin="6dp"
        android:alpha="0.5"/>
</RelativeLayout>
